{
  "exclude": ["node_modules", "dist", "overrides"],
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "~/pages/*": ["src/pages/*"],
      "~/layouts/*": ["src/layouts/*"],
      "~/styles/*": ["src/styles/*"],
      "~/components/*": ["src/components/*"],
      "~/utils/*": ["src/utils/*"],
      "~/images/*": ["src/assets/images/*"],
      "~/i18n/*": ["src/i18n/*"],
      "~/consts": ["src/consts"],
      "~/types": ["src/types"]
    }
  }
}
