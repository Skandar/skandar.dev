---
import { styles } from "./ArticleEntry.css";

interface Props {
  titleLevel: number;
  title: string;
  descirption: string;
  href: string;
}

const { titleLevel, title, descirption, href } = Astro.props;

const TitleTag = `h${titleLevel}`;
---

<article class={styles.entry}>
  <a href={href} class={styles.link} data-astro-prefetch>
    <TitleTag class:list={[styles.title]}>{title}</TitleTag>
    {descirption && <p class={styles.description}>{descirption}</p>}
  </a>
</article>
